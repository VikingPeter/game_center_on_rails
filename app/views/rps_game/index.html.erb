<%= render 'shared/navbar' %>


<main>
	<secion class="rps-game-wrapper container">
		<div class="rps-content col-xs-6">
			<header class="header">
				<h2>Rock, Paper, Scissors</h2>
				<p>Play the game below</p>

			</header>
			<div class="col-xs-8 col-xs-offset-3">
				<div class="game-box">
					<h3><%="Computer choice #{@computer}"%></h3>
					<h3><%="The result is #{@result}"%></h3>
				</div>
				<div class="game-box">
					<div class="row">
						<h3><%="Player: #{session[:play_count]} Computer: #{session[:comp_count]}"%></h3>
					</div>
				</div>

				<div class="game-box">
					<%= form_tag do %>
						<%= radio_button_tag(:player_choice, "rock") %>
						<%= label_tag(:rock_label, "Rock") %>

						<%= radio_button_tag(:player_choice, "paper") %>
						<%= label_tag(:paper, "Paper") %>

						<%= radio_button_tag(:player_choice, "Scissors") %>
						<%= label_tag(:scissors_label, "scissors") %>
						<%= submit_tag("Ro Sham Bo!") %>
					<% end %>
				</div>


			</div>
		
		</div>
		<br>
		<br>
		<br>
		<br>
	<h1><%= @result %></h1>
	</secion>
</main>
